import("//base/security/access_token/access_token.gni")

# Common configurations for accesstoken fuzz tests

# Common include directories
accesstoken_fuzzer_include_dirs = [
  "${access_token_path}/interfaces/innerkits/accesstoken/include",
  "${access_token_path}/test/fuzztest/common",
]

# Common dependencies
accesstoken_fuzzer_deps = [
  "${access_token_path}/interfaces/innerkits/accesstoken:libaccesstoken_sdk",
]

# Common external dependencies
accesstoken_fuzzer_external_deps = [
  "c_utils:utils",
  "hilog:libhilog",
  "ipc:ipc_single",
]

# Common cflags for fuzz tests
accesstoken_fuzzer_cflags = [
  "-g",
  "-O0",
  "-Wno-unused-variable",
  "-fno-omit-frame-pointer",
]

# Common configs
accesstoken_fuzzer_configs = [ "${access_token_path}/config:coverage_flags" ]
