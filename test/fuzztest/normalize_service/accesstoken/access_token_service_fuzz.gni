import("../../../../services/accesstokenmanager/accesstoken_manager.gni")

# Common configurations for accesstoken service fuzz tests

# Common sources
access_token_service_fuzz_sources = accesstoken_manager_base_config.sources

# Common include directories
access_token_service_fuzz_include_dirs =
    accesstoken_manager_base_config.include_dirs
access_token_service_fuzz_include_dirs +=
    [ "${access_token_path}/test/fuzztest/common" ]

# Common dependencies
access_token_service_fuzz_deps = accesstoken_manager_base_config.deps
access_token_service_fuzz_deps += [
  "${access_token_path}/frameworks/common:accesstoken_common_cxx",
  "${access_token_path}/interfaces/innerkits/accesstoken:libaccesstoken_sdk",
]

# Common external dependencies
access_token_service_fuzz_external_deps =
    accesstoken_manager_base_config.external_deps

# Common configs
access_token_service_fuzz_configs = accesstoken_manager_base_config.configs

# Common cflags_cc
access_token_service_fuzz_cflags_cc = accesstoken_manager_base_config.cflags_cc

# Common cflags for fuzz tests
access_token_service_fuzz_cflags = [
  "-g",
  "-O0",
  "-Wno-unused-variable",
  "-fno-omit-frame-pointer",
]
