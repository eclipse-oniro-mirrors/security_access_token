import("../../../../services/accesstokenmanager/accesstoken_manager.gni")
import("../../../../services/tokensyncmanager/tokensync_manager.gni")

# Common configurations for accesstoken stub fuzz tests

# Common sources
access_token_stub_fuzz_sources = accesstoken_manager_base_config.sources

# Common include directories
access_token_stub_fuzz_include_dirs =
    accesstoken_manager_base_config.include_dirs
access_token_stub_fuzz_include_dirs += [
  "${access_token_path}/test/fuzztest/common",
  "${access_token_path}/interfaces/innerkits/nativetoken/include",
  "${access_token_path}/frameworks/tokensync/include",
  "${access_token_path}/services/tokensyncmanager/include/service",
  "${access_token_path}/interfaces/innerkits/accesstoken/src",
  "${access_token_path}/interfaces/innerkits/token_setproc/include",
]

# Common dependencies
access_token_stub_fuzz_deps = [
  "${access_token_path}/frameworks/common:accesstoken_common_cxx",
  "${access_token_path}/interfaces/innerkits/accesstoken:libaccesstoken_sdk",
  "${access_token_path}/interfaces/innerkits/nativetoken:libnativetoken_shared",
  "${access_token_path}/interfaces/innerkits/token_setproc:libtoken_setproc",
]
access_token_stub_fuzz_deps += accesstoken_manager_base_config.deps

# Common external dependencies
access_token_stub_fuzz_external_deps =
    accesstoken_manager_base_config.external_deps

# Common configs
access_token_stub_fuzz_configs = accesstoken_manager_base_config.configs

# Common cflags_cc
access_token_stub_fuzz_cflags_cc = accesstoken_manager_base_config.cflags_cc

# Common cflags for fuzz tests
access_token_stub_fuzz_cflags = [
  "-g",
  "-O0",
  "-Wno-unused-variable",
  "-fno-omit-frame-pointer",
]

if (token_sync_enable) {
  access_token_stub_fuzz_sources += tokensync_manager_base_config.sources
  access_token_stub_fuzz_include_dirs +=
      tokensync_manager_base_config.include_dirs
  access_token_stub_fuzz_deps += tokensync_manager_base_config.deps
  access_token_stub_fuzz_external_deps +=
      tokensync_manager_base_config.external_deps
  access_token_stub_fuzz_cflags_cc += tokensync_manager_base_config.cflags_cc
}
