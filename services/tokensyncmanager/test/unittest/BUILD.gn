import("//build/test.gni")
import("../../tokensync_manager.gni")

ohos_unittest("libtoken_sync_service_standard_test") {
  subsystem_name = "accesscontrol"
  module_out_path = module_output_path_unittest_accesstoken
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }
  branch_protector_ret = "pac_ret"

  sources = tokensync_manager_base_config.sources
  sources -= [
    "${access_token_path}/services/tokensyncmanager/src/common/constant.cpp",
  ]
  sources += [
    "${access_token_path}/interfaces/innerkits/accesstoken/test/unittest/common/test_common.cpp",
    "${access_token_path}/services/tokensyncmanager/test/mock/src/constant_mock.cpp",
    "${access_token_path}/services/tokensyncmanager/test/mock/src/soft_bus_socket_mock.cpp",
    "token_sync_service_test.cpp",
  ]

  include_dirs = tokensync_manager_base_config.include_dirs
  include_dirs += [
    "${access_token_path}/services/tokensyncmanager/test/mock/include",
    "${access_token_path}/interfaces/innerkits/nativetoken/include",
    "${access_token_path}/interfaces/innerkits/token_setproc/include",
    "${access_token_path}/interfaces/innerkits/accesstoken/test/unittest/common/",
  ]

  deps = tokensync_manager_base_config.deps
  deps += [ "${access_token_path}/interfaces/innerkits/token_setproc:libtokensetproc_shared" ]

  cflags_cc = tokensync_manager_base_config.cflags_cc

  configs = tokensync_manager_base_config.configs

  external_deps = tokensync_manager_base_config.external_deps
}
