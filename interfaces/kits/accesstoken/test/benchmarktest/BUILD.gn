import("//build/test.gni")
import("../../../../../access_token.gni")

module_output_path = "access_token/interfaces_kit"

config("access_token_kits_config_benchmarktest") {
  visibility = [ ":*" ]

  include_dirs = [
    "${access_token_path}/frameworks/common/include",
    "../../../token_setproc/include",
    "../../napi/include",
  ]

  configs = [ "${access_token_path}/config:coverage_flags" ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }
}

ohos_benchmarktest("NapiAtmanagerTest") {
  module_out_path = module_output_path

  sources = [ "napi_atmanager_test.cpp" ]
  configs = [
    "${access_token_path}/config:coverage_flags",
    ":access_token_kits_config_benchmarktest",
  ]

  deps = [
    "${access_token_path}/interfaces/innerkits/accesstoken/:libaccesstoken_sdk",
    "//third_party/benchmark",
    "//third_party/googletest:gtest_main",
  ]
}

group("benchmarktest") {
  testonly = true
  deps = [ ":NapiAtmanagerTest" ]
}
